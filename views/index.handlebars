<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center" id="top-bar">

      <h1> Eat-Da-Burger! </h1>

      <img src="/assets/img/burger.png" alt="burger" width="250px"/>

    </div>
    <br><br>
    <div class="col-xs-6 text-center" class="task">
      <div class="row">
        {{#each burger_data}}
          {{#unless this.devoured}}
        <div class="col-xs-9 text-center">
          <pre>{{this.id}}. {{this.burger_name}}
          </pre>
              <!-- {{this.date_id}} -->
        </div>
        <div class="col-xs-3 text-center">
          <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
            <input input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
            <button type="submit" class="btn btn-default">Eat Me!!</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-xs-6 text-center" class="task">
        {{#each burger_data}}
          {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
        {{/if}}
        {{/each}}
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center enter_section">
    <h4>Build your custom burger here!</h4>
      <form action="/burgers/create" method="POST">
        <input type="text" class="form-control" name="burger_name" value="" id="enter_text"><br>
        <button type="submit" class="btn btn-primary" id="text-enter-button">Order Burger</button>
      </form><br>
      
    </div>
  </div>
</div>